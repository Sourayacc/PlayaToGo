<div class="container">
  <div class="beach-card justify-content-between d-flex ">
    <div class="card-product d-flex justify-content-between mt-5">
      <div class=""><%= cl_image_tag @beach.photo.key, width: 100, height: 50, crop: :fill %></div>
        <div class="card-product-infos text-end">
        <h2>
          <strong><%= @beach.title %></strong>
        </h2>
        <p>
          <%= @beach.description %>
        </p>
        <p>
          <%= @beach.address %>
        </p>
        <p>
          <%= @beach.price %>
        </p>
        <p>
          <% if @beach.lunch %>
            <p>Lunch available</p>
          <% end %>
        </p>
        </div>
      </div>
    <%= render :partial => 'bookings/form_booking' %>
    </div>
  </div>
</div>


