<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="card-trip">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-trip-infos">
        <p>
          <strong>Name:</strong>
          <%= @beach.title %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @beach.description %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @beach.address %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @beach.price %>
        </p>

        <p>
          <% if @beach.lunch %>
            <strong>Lunch:</strong>
            <p>Lunch available</p>
          <% end %>
        </p>
        </div>
      </div>
    </div>
  </div>
</div>


<%= link_to 'Back', beaches_path %>
