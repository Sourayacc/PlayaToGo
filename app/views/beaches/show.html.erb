<div class="container-show-beach">
  <div class="beach-card justify-content-between d-flex ">
    <div class="card-product-show d-flex mt-5">
      <div class=""><%= cl_image_tag @beach.photo.key %></div>
        <div class="card-product-show-infos text-end">
        <h2>
          <strong><%= @beach.title %></strong>
        </h2>
        <h4>
          <%= @beach.description %>
        </h4>
        <p>
          <%= @beach.address %>
        </p>
        <span class="badge badge-warning">
        <p>
          <%= @beach.price %>
        </p>
        </span>
        <p>
          <% if @beach.lunch %>
            <p>Lunch available</p>
          <% end %>
        </p>
        </div>
        </div>
        <div class="booking-form mt-5">
        <h4>Bookings</h4>
        <%= render :partial => 'bookings/form_booking' %>
      </div>
    </div>
  </div>
</div>
  <div class="btn-back">
    <%= link_to 'Back', beaches_path, class:"btn btn-secondary"%>
  </div>
