
<%= simple_form_for(@beach) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="row container-form">
  <div class="form-title">
    <h4>Add Your Beach</h4>
  </div>
  <div class="form-inputs">
    <%= f.input :title, label: 'Add beach title' %>
    <%= f.input :description, label: 'Add beach description'  %>
    <%= f.input :address, label: 'Add beach address'  %>
    <%= f.input :price, label: 'Add beach price'  %>
    <%= f.input :lunch, label: 'Are you offering lunch?'  %>
    <%= f.input :photo, as: :file, label: 'Insert your beach photo'  %>
  </div>
  <div class="d-flex justify-content-between">
    <div class="">
    <%= link_to 'Back', beaches_path, class:"btn btn-secondary" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
</div>


<% end %>
