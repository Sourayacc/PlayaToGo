<p id="notice"><%= notice %></p>

<h1 class="text-center">Your <strong>bookings</strong></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Photo</th>
      <th>Starting Date</th>
      <th>Ending date</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <div class="card">
          <div class="card-description">
             <% if booking.user_id == current_user.id %>
            <td><strong id="title"><%= booking.beach.title %></strong></td>
            <td><%= cl_image_tag booking.beach.photo.key, width: 200, height: 100, crop: :fill %></td>
            <td><%= booking.starting_date %></td>
            <td><%= booking.ending_date %></td>
            <% end %>
          </div>
        </div>


      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', beaches_path %>
